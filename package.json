{
	"name": "fury",
	"displayName": "Fury",
	"description": "Experimental dependency manager and build tool for Scala.",
	"version": "0.0.1",
	"publisher": "Propensive",
	"icon": "media/logo.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/propensive/fury-vscode"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"workspaceContains: *"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fury-explorer",
					"title": "Fury",
					"icon": "media/logo.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "furyLayerItems",
				"contents": "Cannot connect to the Fury server."
			}
		],
		"views": {
			"fury-explorer": [
				{
					"id": "furyLayerItems",
					"name": "Layer"
				},
				{
					"id": "furyUniverseItems",
					"name": "Universe"
				}
			]
		},
		"commands": [
			{
				"command": "fury.layer.refresh",
				"title": "Refresh Layer",
				"icon": {
					"dark": "media/icons/dark/refresh.svg",
					"light": "media/icons/light/refresh.svg"
				}
			},
			{
				"command": "fury.project.showDependencyGraph",
				"title": "Show dependency graph"
			},
			{
				"command": "fury.layer.addProject",
				"title": "Add Project"
			},
			{
				"command": "fury.module.addDependency",
				"title": "Add Dependency"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "fury.layer.refresh",
					"when": "view == furyLayerItems && viewItem == furyLayer",
					"group": "inline"
				},
				{
					"command": "fury.layer.addProject",
					"when": "view == furyLayerItems && viewItem == furyLayer"
				},
				{
					"command": "fury.project.showDependencyGraph",
					"when": "view == furyLayerItems && viewItem == furyProject"
				},
				{
					"command": "fury.module.addDependency",
					"when": "view == furyLayerItems && viewItem == furyModule"
				}
			]
		},
		"markdown.markdownItPlugins": true
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@typescript-eslint/parser": "^4.1.1",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.43.0",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mermaid": "^8.7.0",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"axios": "0.19.0",
		"markdown-it-container": "^3.0.0"
	}
}
